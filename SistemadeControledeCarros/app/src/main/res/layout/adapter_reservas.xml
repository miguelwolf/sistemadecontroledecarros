<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_reservas_iv_usuario"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/corolla" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/adapter_reservas_iv_usuario"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/adapter_reservas_tv_modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corolla"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/adapter_reservas_tv_placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PKL-0759"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/adapter_reservas_tv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08/12/2016 - 07:00~14:00"
            android:textSize="16dp" />

    </LinearLayout>


</RelativeLayout>